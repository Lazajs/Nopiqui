{
  "root": true,
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { 
    "project": ["./client/tsconfig.json"],
    "sourceType": "module" 
},
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "@typescript-eslint/strict-boolean-expressions": [
          2,
          {
              "allowString" : false,
              "allowNumber" : false
          }
      ]
  },
  "ignorePatterns": ["src/**/*.test.ts", "src/frontend/generated/*"]
}